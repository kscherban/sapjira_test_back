{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
"parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "sapjiradc",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Network Address prefix"
      }
    },
    "subnets-array": {
      "type": "array",
      "defaultValue": [
        {
          "subnetname": "testscale",
          "prefix": "10.0.4.0/24"
        },
        {
          "subnetname": "testback",
          "prefix": "10.0.5.0/24"
        },
        {
          "subnetname": "qascale",
          "prefix": "10.0.14.0/24"
        }
      ]
    }
  },
  "variables": {
    "azureApi": {
      "network": "2017-06-01",
      "vm": "2017-03-30"
    },
    "names": {
      "vnet": "[parameters('vnetName')]"
    },
    "AddressPrefix": "[parameters('vnetAddressPrefix')]"
  },
  "resources": [
    {
      "apiVersion": "[variables('azureApi').network]",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('names').vnet]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('AddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[concat('sapjira', parameters('subnets-array')[copyIndex()].subnetname)]",
            "properties": {
              "addressPrefix": "[concat('sapjira', parameters('subnets-array')[copyIndex()].prefix)]"
            }
          }
        ]
      },
      "copy": {
        "name": "subnets",
        "mode": "Serial",
        "batchSize": 1,
        "count": "[length(parameters('subnets-array'))]"
      }
    }  
  ],
  "outputs": {
  }
}
